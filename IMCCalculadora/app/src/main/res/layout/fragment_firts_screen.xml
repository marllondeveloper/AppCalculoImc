<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentFirtsScreen">


  <TextView
      android:id="@+id/textSimuladorImc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center"
      android:text="Simulador IMC"
      android:layout_marginTop="20dp"
      android:textSize="30dp"
      android:textStyle="bold"
      android:textColor="@color/dark_red"/>

  <TextView
      android:id="@+id/textEnunciado"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Calcule o seu Índice de Massa Corporal"
      android:layout_gravity="top|center"
      android:layout_marginTop="60dp"
      android:textSize="20dp"
      android:textStyle="bold"
      android:textColor="@color/black"/>

  <TextView
      android:id="@+id/textPeso"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center"
      android:text="Peso(kg)"
      android:textStyle="bold"
      android:layout_marginTop="100dp"
      android:textSize="15dp"
      android:textColor="@color/black" />

  <EditText
      android:id="@+id/editTextPeso"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center"
      android:layout_marginTop="130dp"
      android:hint="ex:69.2"
      android:inputType="numberDecimal"
      android:minHeight="48dp"
      android:paddingHorizontal="140dp" />

  <TextView
      android:id="@+id/textAltura"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center"
      android:layout_marginTop="180dp"
      android:text="Altura (cm)"
      android:textStyle="bold"
      android:textColor="@color/black"/>

  <EditText
      android:id="@+id/editTextAltura"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center"
      android:layout_marginTop="210dp"
      android:hint="ex:1.70"
      android:inputType="numberDecimal"
      android:minHeight="48dp"
      android:paddingHorizontal="140dp" />

  <Button
      android:id="@+id/buttonCalcular"
      android:layout_width="160dp"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center"
      android:layout_marginTop="280dp"
      android:backgroundTint="@color/dark_red"
      android:text="CALCULAR"
      android:textColor="@color/white"
      android:textStyle="bold" />


</FrameLayout>