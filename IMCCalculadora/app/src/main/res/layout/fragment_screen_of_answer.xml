<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentScreenOfAnswer"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:text="RESULTADO"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/resultadoImcUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="205dp"
        android:text=""
        android:textColor="@color/purple_500"
        android:textSize="50dp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardDataImc"
        android:layout_width="330dp"
        android:layout_height="360dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/Glitter"
        tools:ignore="MissingConstraints">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardClassImc"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/lightsteelblue"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="80dp"
                android:text="Classificação:"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textImcKg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginStart="90dp"
                android:layout_marginTop="15dp"
                android:text="IMC(kg/m²)"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPesoBaixo"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/Glitter">

            <TextView
                android:id="@+id/textPesoBaixo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Baixo Peso	                              18,5"
                android:textSize="20dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPesoNormal"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/Glitter">


            <TextView
                android:id="@+id/textPesoNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Peso Normal	               18,5 a 24,9"
                android:textSize="20dp"
                android:textColor="@color/black"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardExcessoDePeso"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/Glitter">

            <TextView
                android:id="@+id/textEscessoDePeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Excesso de Peso           	25 a 29,9"
                android:textSize="20dp"
                android:textColor="@color/black"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardObesidadeGau1"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/Glitter">


            <TextView
                android:id="@+id/textObesidadeGrau1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Obesidade Grau I	           30 a 34,9"
                android:textSize="20dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardObesidadeGau2"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:backgroundTint="@color/Glitter">

            <TextView
                android:id="@+id/textObesidadeGrau2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Obesidade Grau II	          35 a 39,9"
                android:textSize="20dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardObesidadeMórbida"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:backgroundTint="@color/Glitter">


            <TextView
                android:id="@+id/textObesidadeMorbida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Obesidade Mórbida	                   40"
                android:textSize="20dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textInformation"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="95dp"
        android:lines="1"
        android:text="*Um IMC superior a 25 pode ser prejudicial para saúde"
        android:textSize="12dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textIndicateLink"
        android:text="Saiba mais:"
        android:textSize="10dp"
        android:textStyle="italic"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://bityli.com/FhypE"
        android:autoLink="web"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="40dp"/>


</FrameLayout>